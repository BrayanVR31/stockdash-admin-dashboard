{
  "compilerOptions": {
    "target": "ES6",
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "strict": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    /** Path alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
